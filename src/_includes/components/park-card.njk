{# Park Card Component
   Usage: {% include "components/park-card.njk" %}
   Expects: park object in scope
#}
<article class="park-card group">
  <div class="park-card__image">
    <img
      src="{{ park.image or '/assets/images/parks/placeholder.jpg' }}"
      alt="{{ park.name }} entrance"
      loading="lazy"
      width="400"
      height="300"
      class="w-full h-full object-cover"
    >
    {% if park.new %}
      <span class="park-card__badge">NEW</span>
    {% elif park.featured %}
      <span class="park-card__badge bg-secondary-500">Featured</span>
    {% endif %}
  </div>
  <div class="park-card__content">
    <h3 class="park-card__title">
      <a href="/parks/{{ park.region }}/{{ park.slug }}/">
        {{ park.name }}
      </a>
    </h3>
    <p class="park-card__location">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      {{ park.city }}{% if park.state %}, {{ park.state }}{% endif %}, {{ park.country }}
    </p>
    {% if park.description %}
      <p class="text-sm text-gray-600 mb-3 line-clamp-2">{{ park.description }}</p>
    {% endif %}
    <div class="park-card__meta">
      <span class="park-card__rating">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        {{ park.rating }}
      </span>
      <span class="park-card__type">{{ park.type }}</span>
    </div>
  </div>
</article>
