<footer class="footer">
  <div class="container">
    <div class="footer-grid mb-12">
      <!-- Parks -->
      <div>
        <h3 class="footer-title">Popular Parks</h3>
        <ul class="footer-links">
          {% for link in navigation.footer.parks %}
            <li><a href="{{ link.url }}" class="footer-link">{{ link.label }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Tools -->
      <div>
        <h3 class="footer-title">Planning Tools</h3>
        <ul class="footer-links">
          {% for link in navigation.footer.tools %}
            <li><a href="{{ link.url }}" class="footer-link">{{ link.label }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="footer-title">Resources</h3>
        <ul class="footer-links">
          {% for link in navigation.footer.resources %}
            <li><a href="{{ link.url }}" class="footer-link">{{ link.label }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="footer-title">Company</h3>
        <ul class="footer-links">
          {% for link in navigation.footer.company %}
            <li><a href="{{ link.url }}" class="footer-link">{{ link.label }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="bg-gray-800 rounded-xl p-6 md:p-8 mb-12">
      <div class="md:flex md:items-center md:justify-between">
        <div class="mb-4 md:mb-0">
          <h3 class="text-white font-bold text-lg mb-1">Get Park Updates & Deals</h3>
          <p class="text-gray-400 text-sm">Weekly tips, new park coverage, and exclusive planning guides.</p>
        </div>
        <form class="flex gap-2" action="#" method="POST">
          <input
            type="email"
            placeholder="Your email"
            required
            class="flex-1 md:w-64 px-4 py-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 border border-gray-600 focus:border-primary-500 focus:outline-none"
          >
          <button type="submit" class="btn btn-primary whitespace-nowrap">
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 pt-8 border-t border-gray-800">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-500" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="16" cy="16" r="14" stroke="currentColor" stroke-width="2" fill="none"/>
          <path d="M8 20 L12 8 L16 16 L20 8 L24 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
          <circle cx="16" cy="22" r="2" fill="currentColor"/>
        </svg>
        <span class="text-gray-400 text-sm">&copy; {% year %} {{ site.copyright }}</span>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <a href="https://twitter.com/{{ site.social.twitter | replace('@', '') }}" class="text-gray-400 hover:text-white transition-colors" aria-label="Twitter">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="https://instagram.com/{{ site.social.instagram | replace('@', '') }}" class="text-gray-400 hover:text-white transition-colors" aria-label="Instagram">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        <a href="https://youtube.com/{{ site.social.youtube | replace('@', '') }}" class="text-gray-400 hover:text-white transition-colors" aria-label="YouTube">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
        </a>
        <a href="/feeds/rss.xml" class="text-gray-400 hover:text-white transition-colors" aria-label="RSS Feed">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
