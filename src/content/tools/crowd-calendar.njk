        <div class="bg-gray-50 rounded-lg p-4">
          <div class="text-sm text-gray-500 mb-1">Crowd Level</div>
          <div class="text-2xl font-bold" :class="selectedDay ? getCrowdTextClass(selectedDay.crowd) : ''" x-text="selectedDay ? selectedDay.crowd + '/10' : ''"></div>
