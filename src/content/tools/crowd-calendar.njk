    <section x-show="selectedDay" class="bg-white rounded-xl shadow-lg p-6 mb-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">
        <span x-text="selectedDay ? formatDate(selectedDay.date) : ''"></span>
      </h2>

