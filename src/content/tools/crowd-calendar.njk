      <div class="mt-4 p-4 bg-blue-50 rounded-lg">
        <h3 class="font-semibold text-blue-900 mb-2">Tips for This Day</h3>
        <ul class="space-y-1 text-sm text-blue-800">
          <template x-for="tip in (selectedDay ? getDayTips(selectedDay.crowd) : [])" :key="tip">
            <li class="flex items-start">
