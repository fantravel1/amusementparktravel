      <!-- Events -->
      <div x-show="selectedDay && selectedDay.events && selectedDay.events.length > 0">
        <h3 class="font-semibold text-gray-900 mb-2">Special Events & Factors</h3>
        <div class="flex flex-wrap gap-2">
