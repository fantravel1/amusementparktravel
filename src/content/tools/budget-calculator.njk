<script>
function budgetCalculator() {
  return {
    party: { adults: 2, children: 0 },
    parks: {
      disney: { enabled: true, days: 4, ticketType: 'parkHopper', lightningLane: 'none' },
      universal: { enabled: true, days: 3, parkOption: '3park', expressPass: 'none' },
      seaworld: { enabled: false, days: 1, parkOption: 'single' }
    },
    hotel: { nights: 7, type: 'moderate' },
    dining: { budget: 'moderate' },
    transport: 'none',
    extras: { souvenirs: 50 },

    get totalPeople() { return this.party.adults + this.party.children; },
    get totalDays() {
      let days = 0;
      if (this.parks.disney.enabled) days += this.parks.disney.days;
      if (this.parks.universal.enabled) days += this.parks.universal.days;
      if (this.parks.seaworld.enabled) days += this.parks.seaworld.days;
      return days || this.hotel.nights;
    },

    get ticketCost() {
      let cost = 0;

      // Disney pricing (per day rates improve with more days)
      if (this.parks.disney.enabled) {
        const disneyBase = { 1: 169, 2: 159, 3: 139, 4: 119, 5: 99 };
        const baseRate = disneyBase[Math.min(this.parks.disney.days, 5)] || 89;
        let adultPrice = baseRate * this.parks.disney.days;
        let childPrice = (baseRate - 10) * this.parks.disney.days;

        // Park Hopper adds
        if (this.parks.disney.ticketType === 'parkHopper') {
          adultPrice += 80;
          childPrice += 80;
        } else if (this.parks.disney.ticketType === 'parkHopperPlus') {
          adultPrice += 105;
          childPrice += 105;
        }

        // Lightning Lane
        if (this.parks.disney.lightningLane === 'multiPass') {
          adultPrice += 30 * this.parks.disney.days;
          childPrice += 30 * this.parks.disney.days;
        } else if (this.parks.disney.lightningLane === 'premier') {
          adultPrice += 130 * this.parks.disney.days;
          childPrice += 130 * this.parks.disney.days;
        }

        cost += (adultPrice * this.party.adults) + (childPrice * this.party.children);
      }

      // Universal pricing
      if (this.parks.universal.enabled) {
        const uniBase = { 1: 169, 2: 149, 3: 119, 4: 99 };
        let baseRate = uniBase[Math.min(this.parks.universal.days, 4)] || 89;

        if (this.parks.universal.parkOption === '2park') baseRate += 40;
        if (this.parks.universal.parkOption === '3park') baseRate += 80;

        let adultPrice = baseRate * this.parks.universal.days;
        let childPrice = (baseRate - 10) * this.parks.universal.days;

        // Express Pass
        if (this.parks.universal.expressPass === 'express') {
          adultPrice += 100 * this.parks.universal.days;
          childPrice += 100 * this.parks.universal.days;
        } else if (this.parks.universal.expressPass === 'unlimited') {
          adultPrice += 150 * this.parks.universal.days;
          childPrice += 150 * this.parks.universal.days;
        }

        cost += (adultPrice * this.party.adults) + (childPrice * this.party.children);
      }

      // SeaWorld pricing
      if (this.parks.seaworld.enabled) {
        let baseRate = 99;
        if (this.parks.seaworld.parkOption === 'combo2') baseRate = 139;
        if (this.parks.seaworld.parkOption === 'combo3') baseRate = 199;

        const adultPrice = baseRate * this.parks.seaworld.days;
        const childPrice = (baseRate - 15) * this.parks.seaworld.days;

        cost += (adultPrice * this.party.adults) + (childPrice * this.party.children);
      }

      return Math.round(cost);
    },

    get hotelCost() {
      const rates = {
        'budget': 100,
        'moderate': 200,
        'deluxe': 375,
        'luxury': 550,
        'onsite-value': 200,
        'onsite-moderate': 350,
        'onsite-deluxe': 600,
        'universal-value': 200,
        'universal-premier': 350
      };
      return Math.round(rates[this.hotel.type] * this.hotel.nights);
    },

    get diningCost() {
      const rates = { 'budget': 50, 'moderate': 80, 'full': 120, 'splurge': 180 };
      const perPerson = rates[this.dining.budget];
      return Math.round(perPerson * this.totalPeople * this.totalDays);
    },

    get transportCost() {
      if (this.transport === 'none') return 0;
      if (this.transport === 'rental') return (50 + 30) * this.hotel.nights;
      if (this.transport === 'rideshare') return 40 * this.totalDays;
      return 0;
    },

    get extrasCost() {
      return Math.round(this.extras.souvenirs * this.totalDays);
    },

    get totalCost() {
      return this.ticketCost + this.hotelCost + this.diningCost + this.transportCost + this.extrasCost;
    },

    get perPersonCost() {
      return Math.round(this.totalCost / this.totalPeople);
    }
  };
}
</script>

