            <li class="flex items-center justify-between py-2 border-b border-gray-100">
              <div>
                <span class="font-medium" x-text="ride.name"></span>
                <span class="text-xs text-yellow-600 block" x-text="'Needs ' + formatHeight(ride.requirement - heightInInches) + ' more'"></span>
              </div>
              <span class="text-sm text-gray-500" x-text="formatHeight(ride.requirement) + ' min'"></span>
            </li>
          </template>
          <li x-show="almostList.length === 0" class="text-gray-500 italic">No attractions in this range</li>
        </ul>
      </section>
    </div>

    <!-- Can't Ride Yet -->
    <section class="bg-white rounded-xl shadow-lg p-6 mb-6">
      <h2 class="text-lg font-bold text-red-600 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        Not Yet (<span x-text="cantRideCount"></span>)
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 max-h-60 overflow-y-auto">
        <template x-for="ride in cantRideList" :key="ride.name">
          <div class="flex items-center justify-between py-2 px-3 bg-red-50 rounded-lg">
            <span class="text-sm" x-text="ride.name"></span>
            <span class="text-xs text-red-600" x-text="formatHeight(ride.requirement)"></span>
          </div>
        </template>
      </div>
    </section>

    <!-- Tips Section -->
    <section class="bg-gray-50 rounded-xl p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Height Requirement Tips</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">Before You Go</h3>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-start">
              <span class="text-primary mr-2">•</span>
