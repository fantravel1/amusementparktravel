        { name: 'Wilderness Run', requirement: 36 }
      ]
    },

    get heightInInches() {
      if (this.unit === 'inches') return this.height;
      return Math.round(this.height / 2.54);
    },

    get heightInCm() {
      if (this.unit === 'cm') return this.height;
      return Math.round(this.height * 2.54);
    },

    get heightInFeetInches() {
      const inches = this.heightInInches;
      const feet = Math.floor(inches / 12);
      const remainingInches = inches % 12;
      return `${feet}'${remainingInches}"`;
    },

    get heightDisplay() {
      return this.unit === 'inches'
        ? `${this.height}" (${this.heightInFeetInches})`
        : `${this.height} cm (${this.heightInFeetInches})`;
    },

    get currentParkRides() {
      return this.rideData[this.selectedPark] || [];
    },

    get canRideList() {
      return this.currentParkRides
        .filter(ride => this.heightInInches >= ride.requirement)
        .sort((a, b) => b.requirement - a.requirement);
    },

    get almostList() {
      return this.currentParkRides
        .filter(ride => {
          const diff = ride.requirement - this.heightInInches;
          return diff > 0 && diff <= 2;
        })
        .sort((a, b) => a.requirement - b.requirement);
    },

    get cantRideList() {
      return this.currentParkRides
        .filter(ride => ride.requirement - this.heightInInches > 2)
        .sort((a, b) => a.requirement - b.requirement);
    },

    get canRideCount() {
      return this.canRideList.length;
    },

    get almostCount() {
      return this.almostList.length;
    },

    get cantRideCount() {
      return this.cantRideList.length;
    },

    formatHeight(inches) {
      if (inches < 0) return '0"';
      if (this.unit === 'cm') {
        return Math.round(inches * 2.54) + ' cm';
      }
      if (inches >= 12) {
        const feet = Math.floor(inches / 12);
        const remaining = inches % 12;
        return remaining > 0 ? `${feet}'${remaining}"` : `${feet}'`;
      }
      return `${inches}"`;
    }
  };
}
</script>
